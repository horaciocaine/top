<?php if (isset($this->formValidator) && count($this->formValidator->getValidationErrors())): ?>
  <div class="errors">
    <strong>Errors occurred:</strong>
    <ul>
      <?php foreach ($this->formValidator->getValidationErrors() as $validationError): ?>
        <li><?php echo $this->escape($validationError); ?></li>
      <?php endforeach; ?>
    </ul>
  </div>
<?php endif; ?>
